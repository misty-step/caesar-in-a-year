{
  "name": "caesar-in-a-year",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=20.9.0"
  },
  "scripts": {
    "dev": "concurrently --kill-others-on-fail -n \"Next,Convex,Stripe\" -c \"cyan,magenta,yellow\" \"pnpm dev:next\" \"pnpm dev:convex\" \"pnpm dev:stripe\"",
    "dev:next": "next dev --turbopack",
    "dev:convex": "convex dev",
    "dev:stripe": "stripe -p sandbox listen --forward-to localhost:3000/api/webhooks/stripe",
    "build": "next build",
    "start": "next start",
    "lint": "eslint .",
    "lint:tokens": "./scripts/lint-tokens.sh",
    "stripe:check": "./scripts/stripe-check.sh",
    "check": "pnpm lint && pnpm lint:tokens",
    "test": "vitest",
    "test:ci": "vitest run --coverage",
    "corpus:process": ".venv/bin/python scripts/process-corpus.py --book 1 --chapter 1",
    "corpus:process-all": ".venv/bin/python scripts/process-corpus.py --all",
    "corpus:sync": "tsx scripts/corpus-sync.ts",
    "corpus:sync:prod": "tsx scripts/corpus-sync.ts --prod",
    "corpus:enrich": "tsx scripts/enrich-corpus.ts",
    "corpus:translate": "tsx scripts/regenerate-translations.ts",
    "corpus:all": "pnpm corpus:process-all && pnpm corpus:sync",
    "deploy:prod": "convex deploy -y && pnpm corpus:sync:prod"
  },
  "dependencies": {
    "@clerk/nextjs": "^6.36.7",
    "@google/genai": "^1.0.0",
    "@sentry/nextjs": "^10.36.0",
    "@stripe/stripe-js": "^8.6.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "convex": "^1.30.0",
    "next": "^16.1.1",
    "posthog-js": "^1.335.3",
    "posthog-node": "^5.24.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sonner": "^2.0.7",
    "stripe": "^20.1.2",
    "svix": "^1.84.1",
    "tailwind-merge": "^3.4.0",
    "ts-fsrs": "^5.2.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@next/eslint-plugin-next": "^16.0.7",
    "@types/node": "^20.11.30",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.2",
    "@vitest/coverage-v8": "^4.0.17",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "dotenv": "^17.2.3",
    "eslint": "^9.13.0",
    "eslint-config-next": "^16.0.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "lefthook": "^2.0.15",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.13",
    "tsx": "^4.21.0",
    "typescript": "^5.8.2",
    "typescript-eslint": "^8.48.1",
    "vitest": "^4.0.14"
  }
}
