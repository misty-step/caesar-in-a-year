# Clerk (set in Vercel)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/dashboard
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/dashboard

# Clerk JWT Issuer (set in Convex - MUST match your Clerk instance domain)
# Dev: https://YOUR-INSTANCE.clerk.accounts.dev
# Prod: https://clerk.yourdomain.com (if using custom domain)
CLERK_JWT_ISSUER_DOMAIN=

# Gemini
GEMINI_API_KEY=

# Convex
CONVEX_DEPLOYMENT=
NEXT_PUBLIC_CONVEX_URL=

# Stripe
STRIPE_SECRET_KEY=
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
STRIPE_PRICE_ID=                    # Monthly: $14.99/month
STRIPE_PRICE_ID_ANNUAL=             # Annual: $119.88/year (33% discount)
STRIPE_WEBHOOK_SECRET=

# App URL (required for Stripe redirects)
NEXT_PUBLIC_APP_URL=https://caesarinayear.com

# Server Secret (MUST match in both Vercel AND Convex)
# Generate with: openssl rand -hex 32
CONVEX_WEBHOOK_SECRET=

# Vercel Blob (audio storage)
BLOB_READ_WRITE_TOKEN=                # Vercel Blob token for Latin audio storage
NEXT_PUBLIC_BLOB_URL=                 # Public blob CDN URL (optional, for client optimization)

# Sentry (error tracking)
NEXT_PUBLIC_SENTRY_DSN=
SENTRY_AUTH_TOKEN=                    # For source map uploads (CI only)
SENTRY_ORG=
SENTRY_PROJECT=

# PostHog (product analytics)
NEXT_PUBLIC_POSTHOG_KEY=
POSTHOG_API_KEY=                      # Server-side events
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ============================================================
# PLATFORM REQUIREMENTS
# ============================================================
# Local (.env.local): All vars except CLERK_JWT_ISSUER_DOMAIN
# Vercel: CLERK_*, STRIPE_*, GEMINI_API_KEY, CONVEX_WEBHOOK_SECRET
# Convex: CLERK_JWT_ISSUER_DOMAIN, CONVEX_WEBHOOK_SECRET
#
# CRITICAL: CONVEX_WEBHOOK_SECRET must be identical across
# Vercel and Convex or webhooks will silently fail.
# ============================================================